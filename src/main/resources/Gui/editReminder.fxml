<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.EditReminderController">
    <children>
        <TextField fx:id="reminderTextField" prefWidth="200.0" promptText="Nhắc nhở"/>
        <DatePicker fx:id="datePicker" prefWidth="200.0" promptText="Ngày nhắc nhở"/>
        <HBox spacing="10.0">
            <Button mnemonicParsing="false" onAction="#saveChanges" text="Lưu"/>
            <Button mnemonicParsing="false" onAction="#cancelChanges" text="Hủy"/>
        </HBox>
    </children>
</VBox>